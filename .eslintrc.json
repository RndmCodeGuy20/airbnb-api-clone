{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": "google",
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"rules": {
		"quotes": [
			2,
			"single",
			{
				"avoidEscape": true,
				"allowTemplateLiterals": true
			}
		],
		"max-len": [
			"warn",
			{
				"code": 120
			}
		],
		"object-curly-spacing": ["error", "always"],
		"no-tabs": [
			"error",
			{
				"allowIndentationTabs": true
			}
		]
	}
}
